{
  "project_metadata": {
    "project_name": "gyanguru",
    "project_category": "Education",
    "description": "An AI-powered Machine Learning learning platform that provides multi-format educational content including text explanations, code generation, audio learning, and visual diagrams.",
    "core_purpose": "Help users learn Machine Learning through personalized AI-generated content in multiple formats",
    "target_audience": "Students",
    "key_features": [
      "AI-powered text explanations with difficulty levels",
      "Automated Python ML code generation",
      "Text-to-speech audio learning",
      "AI-generated visual diagrams and flowcharts",
      "Multi-level learning (Beginner/Intermediate/Advanced)",
      "Learning history tracking",
      "Export capabilities for all content formats"
    ]
  },
  "frontend": {
