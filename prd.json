        "is_protected": false
      },
      {
        "page_name": "signUp",
        "route": "/signup",
        "show_in_nav": false,
        "nav_order": 0,
        "purpose": "User registration with secure password validation",
        "sections": [
          "RegistrationForm",
          "PasswordRequirements",
          "RedirectToLogin"
        ],
        "content_notes": "Dark-themed registration form with name, email, password, confirm password fields. Real-time password strength indicator showing requirements (8+ chars, uppercase, lowercase, number, special char). Link to login page for existing users. Form validation with error messages.",
        "data_needs": [
          "POST /api/auth/signup"
        ],
        "is_protected": false
      },
      {
        "page_name": "login",
