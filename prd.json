  "backend": {
    "requires_backend": true,
    "apis": [
      {
        "endpoint": "/api/auth/signup",
        "method": "POST",
        "purpose": "Register new user with hashed password",
        "request_body": {
          "email": "string",
          "name": "string",
          "password": "string"
        },
        "response": {
          "message": "string",
          "success": "boolean",
          "userId": "string"
        },
        "auth": false,
        "used_by": [
          "signUp"
        ]
      },
      {
        "endpoint": "/api/auth/login",
        "method": "POST",
        "purpose": "Authenticate user and return JWT token",
        "request_body": {
          "email": "string",
          "password": "string"
        },
        "response": {
          "success": "boolean",
          "token": "string",
          "user": {
            "email": "string",
            "id": "string",
            "name": "string"
          }
        },
        "auth": false,
        "used_by": [
          "login"
        ]
      },
      {
        "endpoint": "/api/user/profile",
        "method": "GET",
        "purpose": "Get current user profile information",
        "request_body": {},
        "response": {
          "success": "boolean",
          "user": {
            "createdAt": "date",
            "email": "string",
            "id": "string",
            "name": "string"
          }
        },
        "auth": true,
        "used_by": [
          "dashboard",
          "settings"
        ]
      },
      {
        "endpoint": "/api/user/profile",
        "method": "PUT",
        "purpose": "Update user profile information",
        "request_body": {
          "name": "string"
        },
        "response": {
          "message": "string",
          "success": "boolean",
          "user": {
            "email": "string",
            "id": "string",
            "name": "string"
          }
        },
        "auth": true,
        "used_by": [
          "settings"
        ]
      },
      {
        "endpoint": "/api/user/history",
        "method": "GET",
        "purpose": "Get user's learning history",
        "request_body": {},
        "response": {
          "history": [
            {
              "createdAt": "date",
              "id": "string",
              "query": "string",
              "response": "string",
              "type": "string"
            }
          ],
          "success": "boolean"
        },
        "auth": true,
        "used_by": [
          "dashboard"
        ]
      },
      {
        "endpoint": "/api/ai/explain",
        "method": "POST",
        "purpose": "Generate AI text explanation for ML topic",
        "request_body": {
          "difficulty": "string",
          "topic": "string"
        },
        "response": {
          "difficulty": "string",
          "explanation": "string",
          "success": "boolean",
          "topic": "string"
        },
        "auth": true,
        "used_by": [
          "textExplanation"
        ]
      },
      {
        "endpoint": "/api/ai/code",
        "method": "POST",
        "purpose": "Generate Python ML code with comments and dependencies",
        "request_body": {
          "problem": "string",
          "requirements": "string"
        },
        "response": {
          "code": "string",
          "dependencies": [
            "string"
          ],
          "explanation": "string",
          "success": "boolean"
        },
        "auth": true,
        "used_by": [
          "codeGeneration"
        ]
      },
      {
        "endpoint": "/api/ai/audio",
        "method": "POST",
        "purpose": "Convert text to speech for audio learning",
        "request_body": {
          "text": "string",
          "voice": "string"
        },
        "response": {
          "audioUrl": "string",
          "duration": "number",
          "success": "boolean"
        },
        "auth": true,
        "used_by": [
          "audioLearning"
        ]
      },
      {
        "endpoint": "/api/ai/image",
        "method": "POST",
        "purpose": "Generate ML diagrams and flowcharts",
        "request_body": {
          "concept": "string",
          "diagramType": "string"
        },
        "response": {
          "concept": "string",
          "diagramType": "string",
          "imageUrl": "string",
          "success": "boolean"
        },
        "auth": true,
        "used_by": [
          "imageVisualization"
        ]
      }
    ],
    "database": {
      "models": [
        {
          "model_name": "user",
          "fields": {
            "createdAt": "date",
            "email": "string",
            "name": "string",
            "password": "string"
          },
          "relationships": [
            "User hasMany History"
          ],
          "indexes": [
            "email"
          ]
        },
        {
          "model_name": "history",
          "fields": {
            "createdAt": "date",
            "query": "string",
            "response": "string",
            "type": "string",
            "userId": "string"
          },
          "relationships": [
            "History belongsTo User"
          ],
          "indexes": [
            "userId",
            "createdAt"
          ]
        }
      ]
    },
    "authentication": {
      "required": true,
      "type": "jwt",
      "providers": [
        "email"
      ],
      "protected_apis": [
        "/api/user/profile",
        "/api/user/history",
        "/api/ai/explain",
        "/api/ai/code",
        "/api/ai/audio",
        "/api/ai/image"
      ]
    },
    "external_apis": [
      {
        "name": "Google Gemini API",
        "purpose": "Generate AI content for text explanations, code, and image descriptions",
        "required": true
      },
      {
        "name": "Text-to-Speech API",
        "purpose": "Convert generated text explanations to audio format",
        "required": true
      }
    ],
    "file_storage": {
      "required": true,
      "types": [
        "audio",
        "images"
      ],
      "max_size": "10MB"
    }
  },
